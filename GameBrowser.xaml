<Window x:Class="WpfMahjong.GameBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMahjong"
        mc:Ignorable="d"
        Title="GameBrowser" Height="450" Width="800">
    <StackPanel>
        <TextBlock x:Name="usernameBlock" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center"/>
        
        <ListBox x:Name="listboxGames" Margin="10"></ListBox>
        <ItemsControl x:Name="icChat" Margin="10">
            
        </ItemsControl>
        <Button x:Name="refreshChat" Click="refreshChat_Click" Content="refresh" HorizontalAlignment="Center" Margin="10" Padding="5"></Button>

    </StackPanel>
</Window>
