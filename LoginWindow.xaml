<Window x:Class="WpfMahjong.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMahjong"
        mc:Ignorable="d"
        Title="LoginWindow" Height="640" Width="400">
    <DockPanel LastChildFill="False">
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="Choose username" Margin="10" HorizontalAlignment="Center" />
        <TextBox x:Name="guestUsername" DockPanel.Dock="Top" TextWrapping="Wrap" Text="Testname" Margin="10" />
        <Button x:Name="guestLogin" DockPanel.Dock="Top" Content="Login" Margin="10" Click="guestLogin_Click" />

    </DockPanel>
</Window>
